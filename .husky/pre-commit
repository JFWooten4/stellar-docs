G='\033[0;32m'
P='\033[0;35m'
CLEAN='\033[0;0m'

if command -v yarn >/dev/null 2>&1; then
  if ! yarn run check:mdx; then
    echo -e "${G}Hint:${CLEAN} execute ${P}yarn run format:mdx${CLEAN} to format files"
    exit 1
  fi
else
  echo -e "${G}Hint:${CLEAN} install ${P}yarn${CLEAN} to run pre-commit formatting checks"
  exit 0
fi
